<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.homeactivity.ExerciseActivity">

    <TextView
        android:id="@+id/txtAddExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_add_exercise"
        android:textAlignment="center"
        android:textColor="#673AB7"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Exercise name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/txtAddExercise"
        app:layout_constraintHorizontal_bias="0.416"
        app:layout_constraintStart_toStartOf="@+id/txtAddExercise"
        app:layout_constraintTop_toBottomOf="@+id/txtAddExercise" />

    <EditText
        android:id="@+id/editTextSets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Sets"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/editTextName"
        app:layout_constraintStart_toStartOf="@+id/editTextName"
        app:layout_constraintTop_toBottomOf="@+id/editTextName" />

    <EditText
        android:id="@+id/editTextReps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Repetitions"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/editTextSets"
        app:layout_constraintStart_toStartOf="@+id/editTextSets"
        app:layout_constraintTop_toBottomOf="@+id/editTextSets" />

    <EditText
        android:id="@+id/editTextWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Weight"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/editTextReps"
        app:layout_constraintStart_toStartOf="@+id/editTextReps"
        app:layout_constraintTop_toBottomOf="@+id/editTextReps" />

    <EditText
        android:id="@+id/editTextTextEquipment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Equipment"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editTextWeight"
        app:layout_constraintStart_toStartOf="@+id/editTextWeight"
        app:layout_constraintTop_toBottomOf="@+id/editTextWeight" />

    <EditText
        android:id="@+id/editTextDurationPerSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Duration (per set)"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextEquipment"
        app:layout_constraintStart_toStartOf="@+id/editTextTextEquipment"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEquipment" />

    <EditText
        android:id="@+id/editTextRestBetweenSets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Rest (between sets)"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/editTextDurationPerSet"
        app:layout_constraintStart_toStartOf="@+id/editTextDurationPerSet"
        app:layout_constraintTop_toBottomOf="@+id/editTextDurationPerSet" />

    <Button
        android:id="@+id/btnAddExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/title_add_exercise"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editTextRestBetweenSets"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/editTextRestBetweenSets"
        app:layout_constraintTop_toBottomOf="@+id/editTextRestBetweenSets"
        app:layout_constraintVertical_bias="0.212" />

</androidx.constraintlayout.widget.ConstraintLayout>