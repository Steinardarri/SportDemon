<resources>
    <!-- Base application theme -->
    <style name="Theme.SportDemon" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/butterscotch</item>
        <item name="colorPrimaryVariant">@color/golden_brown</item>
        <item name="colorOnPrimary">@color/night</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/viridian</item>
        <item name="colorSecondaryVariant">@color/indigo</item>
        <item name="colorOnSecondary">@color/platinum</item>

        <!-- Tertiary brand color -->
        <item name="colorTertiary">@color/grape</item>
        <item name="colorOnTertiary">@color/french_gray</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here -->
        <item name="android:colorError">?attr/colorError</item>

    </style>
</resources>
