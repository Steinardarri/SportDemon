<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.flash"
        android:required="false" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_sport_demon"
        android:label="@string/app_name"
        android:name=".SportDemon"
        android:supportsRtl="true"
        android:theme="@style/Theme.SportDemon"
        android:usesCleartextTraffic="true"
        tools:targetApi="33">
        <activity
            android:name=".HomeActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize|screenLayout" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignupActivity" android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize|screenLayout" />
        <activity android:name=".LoginActivity" android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize|screenLayout" />
        <activity android:name=".WorkoutActivity" android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize|screenLayout" />
        <activity android:name=".ExerciseComboActivity" android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize|screenLayout" />
        <activity android:name=".PlayTrackerActivity" android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize|screenLayout" />
    </application>

</manifest>
